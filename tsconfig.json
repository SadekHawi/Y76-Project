{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "jest"],
    "paths": {
      "@config": ["./src/config"]
    }
  },
  "include": ["src/**/*", "jest.config.js", "tests/**/*"],
  "exclude": ["node_modules"]
}
